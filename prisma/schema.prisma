generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  pending
  routing
  building
  submitted
  confirmed
  failed
}

enum OrderType {
  market
}

model Order {
  id            String      @id @default(uuid())
  orderType     OrderType   @default(market)
  status        OrderStatus @default(pending)

  tokenIn       String
  tokenOut      String
  amountIn      Decimal
  slippageBps   Int         @default(50)

  chosenDex     String?
  quotes        Json?
  executedPrice Decimal?
  txHash        String?
  errorReason   String?

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([status])
  @@index([createdAt])
}
